# Database Configuration
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_refresh_token_secret_here

# Server Configuration
PORT=3000

# Email Configuration
EMAIL_SERVICE=SMTP
EMAIL_FROM=noreply@yourapp.com
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Mailhog Configuration (for local email testing)
# To use mailhog locally:
# 1. Set EMAIL_SERVICE=SMTP
# 2. Use these settings:
# SMTP_HOST=mailhog
# SMTP_PORT=1025
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=
# 3. View emails at http://localhost:8025

# Mailgun Configuration (if using MAILGUN)
# For Heroku addon: MAILGUN_SMTP_LOGIN and MAILGUN_SMTP_PASSWORD are auto-provided
MAILGUN_SMTP_LOGIN=your_mailgun_smtp_login
MAILGUN_SMTP_PASSWORD=your_mailgun_smtp_password

# AWS Configuration (if using SES)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Environment
NODE_ENV=development

# Frontend Configuration
# Single frontend URL for email links and redirects
FRONTEND_URL=http://localhost:5173

# CORS Configuration
# Comma-separated list of frontend URLs for production
# Example: FRONTEND_URLS=https://yourapp.com,https://www.yourapp.com,https://yourapp.netlify.app
FRONTEND_URLS=https://benwalley.github.io

# Scheduler Configuration
# Enable/disable scheduled tasks (true/false)
SCHEDULER_ENABLED=true
# Cron schedule for daily cleanup (default: 2 AM daily)  
CLEANUP_SCHEDULE=0 2 * * *
# Cron schedule for notification cleanup (default: Sunday 3 AM weekly)
NOTIFICATION_CLEANUP_SCHEDULE=0 3 * * 0
# Number of days to keep read notifications (default: 30)
NOTIFICATION_RETENTION_DAYS=30
# Timezone for scheduled tasks
CLEANUP_TIMEZONE=America/New_York